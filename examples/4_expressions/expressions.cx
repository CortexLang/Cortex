//
// A selection of unique corto expressions

int32 a, b: 0

// Comma expression expansion
a, b = 10, 20 // Expands into a = 10; b = 20


// Complex type expressions 
struct Point::
    x, y: int32

Point p: 10, 20
Point q: 30, 40

p = {20, 30}


// Use comma expansion
q[x, y] = p[x, y] * 2 // q will contain {40, 60}
p[x, y] = 40, 60

if p[x, y] == q[x, y]:
    "p and q are equal!"
else:
    "p and q are not equal :("

// Use member names in assignment
p = {y=10 x=20}

