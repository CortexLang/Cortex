#package ::corto::test

procedure Case: base=method, kind=procedureKind::METHOD

void fail(string err)
void assert(bool condition, $condition)
void assertEqual(any a, any b, $a, $b)

struct Result::
    member success: bool, readonly
    member errmsg: string

class Suite::
    member test: test::Case
    member result: test::Result, readonly

    int16 construct()

    void setup() virtual
    void teardown() virtual

class Runner::
    member name: string
    member successes: list{Suite}, readonly
    member failures: list{Suite}, readonly
    int16 construct()
    void destruct()
    void runTest() observer
    void printTestRun(Suite t) virtual
